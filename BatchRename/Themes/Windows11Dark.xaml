<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <!-- Windows 11 Dark Theme Colors -->
    
    <!-- System Colors -->
    <SolidColorBrush x:Key="SystemAccentBrush" Color="#60CDFF" />
    <SolidColorBrush x:Key="SystemAccentLightBrush" Color="#4CC2FF" />
    <SolidColorBrush x:Key="SystemAccentDarkBrush" Color="#0078D4" />
    
    <!-- Text Colors -->
    <SolidColorBrush x:Key="TextPrimaryBrush" Color="White" />
    <SolidColorBrush x:Key="TextSecondaryBrush" Color="#CCCCCC" />
    <SolidColorBrush x:Key="TextTertiaryBrush" Color="#999999" />
    <SolidColorBrush x:Key="TextDisabledBrush" Color="#6D6D6D" />
    <SolidColorBrush x:Key="TextOnAccentBrush" Color="Black" />
    <SolidColorBrush x:Key="TextInvertedBrush" Color="Black" />
    
    <!-- Background Colors -->
    <SolidColorBrush x:Key="BackgroundPrimaryBrush" Color="#202020" />
    <SolidColorBrush x:Key="BackgroundSecondaryBrush" Color="#1C1C1C" />
    <SolidColorBrush x:Key="BackgroundTertiaryBrush" Color="#292929" />
    <SolidColorBrush x:Key="BackgroundQuaternaryBrush" Color="#2F2F2F" />
    <SolidColorBrush x:Key="BackgroundDisabledBrush" Color="#252525" />
    <SolidColorBrush x:Key="BackgroundInvertedBrush" Color="White" />
    
    <!-- Border Colors -->
    <SolidColorBrush x:Key="BorderPrimaryBrush" Color="#414141" />
    <SolidColorBrush x:Key="BorderSecondaryBrush" Color="#515151" />
    <SolidColorBrush x:Key="BorderHoverBrush" Color="#6D6D6D" />
    <SolidColorBrush x:Key="BorderPressedBrush" Color="#808080" />
    <SolidColorBrush x:Key="BorderDisabledBrush" Color="#3B3B3B" />
    <SolidColorBrush x:Key="BorderFocusBrush" Color="#60CDFF" />
    
    <!-- Interaction Colors -->
    <SolidColorBrush x:Key="HoverBrush" Color="#2F2F2F" />
    <SolidColorBrush x:Key="PressedBrush" Color="#3B3B3B" />
    <SolidColorBrush x:Key="FocusBrush" Color="#60CDFF" />
    <SolidColorBrush x:Key="SelectedBrush" Color="#1E3A5F" />
    
    <!-- Status Colors -->
    <SolidColorBrush x:Key="SuccessBrush" Color="#6CCB5F" />
    <SolidColorBrush x:Key="WarningBrush" Color="#FCE100" />
    <SolidColorBrush x:Key="ErrorBrush" Color="#FF4343" />
    <SolidColorBrush x:Key="InfoBrush" Color="#60CDFF" />
</ResourceDictionary>