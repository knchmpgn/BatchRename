<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <!-- Windows 11 Light Theme Colors -->
    
    <!-- System Colors -->
    <SolidColorBrush x:Key="SystemAccentBrush" Color="#0078D4" />
    <SolidColorBrush x:Key="SystemAccentLightBrush" Color="#106EBE" />
    <SolidColorBrush x:Key="SystemAccentDarkBrush" Color="#005A9E" />
    
    <!-- Text Colors -->
    <SolidColorBrush x:Key="TextPrimaryBrush" Color="#323130" />
    <SolidColorBrush x:Key="TextSecondaryBrush" Color="#605E5C" />
    <SolidColorBrush x:Key="TextTertiaryBrush" Color="#8A8886" />
    <SolidColorBrush x:Key="TextDisabledBrush" Color="#A19F9D" />
    <SolidColorBrush x:Key="TextOnAccentBrush" Color="White" />
    <SolidColorBrush x:Key="TextInvertedBrush" Color="White" />
    
    <!-- Background Colors -->
    <SolidColorBrush x:Key="BackgroundPrimaryBrush" Color="White" />
    <SolidColorBrush x:Key="BackgroundSecondaryBrush" Color="#FAFAFA" />
    <SolidColorBrush x:Key="BackgroundTertiaryBrush" Color="#F3F2F1" />
    <SolidColorBrush x:Key="BackgroundQuaternaryBrush" Color="#EDEBE9" />
    <SolidColorBrush x:Key="BackgroundDisabledBrush" Color="#F3F2F1" />
    <SolidColorBrush x:Key="BackgroundInvertedBrush" Color="#323130" />
    
    <!-- Border Colors -->
    <SolidColorBrush x:Key="BorderPrimaryBrush" Color="#E1DFDD" />
    <SolidColorBrush x:Key="BorderSecondaryBrush" Color="#C7C6C4" />
    <SolidColorBrush x:Key="BorderHoverBrush" Color="#8A8886" />
    <SolidColorBrush x:Key="BorderPressedBrush" Color="#605E5C" />
    <SolidColorBrush x:Key="BorderDisabledBrush" Color="#E1DFDD" />
    <SolidColorBrush x:Key="BorderFocusBrush" Color="#0078D4" />
    
    <!-- Interaction Colors -->
    <SolidColorBrush x:Key="HoverBrush" Color="#F3F2F1" />
    <SolidColorBrush x:Key="PressedBrush" Color="#EDEBE9" />
    <SolidColorBrush x:Key="FocusBrush" Color="#0078D4" />
    <SolidColorBrush x:Key="SelectedBrush" Color="#E3F2FD" />
    
    <!-- Status Colors -->
    <SolidColorBrush x:Key="SuccessBrush" Color="#107C10" />
    <SolidColorBrush x:Key="WarningBrush" Color="#FFB900" />
    <SolidColorBrush x:Key="ErrorBrush" Color="#D13438" />
    <SolidColorBrush x:Key="InfoBrush" Color="#0078D4" />
</ResourceDictionary>